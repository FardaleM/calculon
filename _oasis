AlphaFeatures: compiled_setup_ml, ocamlbuild_more_args

# cygwin fails with anything else
XOCamlbuildExtraArgs: "-j 1"

Synopsis:    A library for writing IRC bots

Flag "web"
  Description:  Build the web-dependent plugins
  Default:      true

Flag "extras"
  Description:  Build the "extras" plugins
  Default:      true

Library "calculon"
  Path:             src/core/
  Pack:             true
  Modules:          Command, Config, Core, Lwt_err,
                    Log, Plugin, Prelude, Signal, Talk, Run_main,
                    Plugin_factoids, Plugin_vote, Plugin_social,
                    Plugin_state, Plugin_history
  BuildDepends:     containers, containers.data, yojson, re, re.perl,
                    irc-client.lwt, irc-client.tls, lwt.unix, stringext, ISO8601

PreBuildCommand: make atdgen

Library "calculon_web"
  Path:             src/web
  Pack:             true
  FindlibName:      web
  FindlibParent:    calculon
  Build$:           flag(web)
  Install$:         flag(web)
  Modules:          Plugin_web, Og, Giphy_j, Giphy_t,
                    Plugin_movie, Movie_j, Movie_t, Movie_schema
  BuildDepends:     calculon, atdgen, cohttp, lwt, cohttp.lwt, lambdasoup, uri

Executable "demo_bot"
  Path:             src/demo/
  MainIs:           demo_bot.ml
  BuildDepends:     calculon.web, calculon.extras
  Install:          false
  CompiledObject:   best
  Build$:           flag(web) && flag(extras)
  Install$:         flag(web) && flag(extras)

Library "calculon_extras"
  Path:             src/extras
  Pack:             true
  FindlibName:      extras
  FindlibParent:    calculon
  Build$:           flag(extras)
  Install$:         flag(extras)
  Modules:          Plugin_markcough, Irclog
  BuildDepends:     calculon, re, sequence, unix

Executable "markcough_learn"
  Path:             src/tools/
